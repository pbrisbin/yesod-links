name:                yesod-links
version:             0.3.0
description:         A yesod goody, yesod links
synopsis:            A typeclass which simplifies creating link widgets throughout your site
homepage:            http://github.com/pbrisbin/yesod-goodies/yesod-links
license:             BSD3
license-file:        LICENSE
author:              Patrick Brisbin
maintainer:          me@pbrisbin.com
category:            Web, Yesod
build-type:          Simple
cabal-version:       >=1.6

library
  exposed-modules: Yesod.Links

  build-depends: base       >= 4    && < 5
               , text       >= 0.11 && < 0.12
               , yesod-core >= 1.2  && < 1.3

  ghc-options: -Wall

source-repository head
  type:         git
  location:     git://github.com/pbrisbin/yesod-goodies.git
